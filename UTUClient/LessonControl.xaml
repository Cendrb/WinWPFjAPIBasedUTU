<UserControl x:Class="UTUClient.LessonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UTUClient"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="60" BorderBrush="#FF8F8F8F" BorderThickness="1">
    <Grid>
        <TextBlock x:Name="subjectView" HorizontalAlignment="Center" Margin="0,0,0,10" Text="TextBlock" VerticalAlignment="Center" FontSize="16"/>
        <TextBlock x:Name="teacherView" HorizontalAlignment="Right" Margin="0,0,4,4" Text="TextBlock" VerticalAlignment="Bottom" TextAlignment="Right"/>
        <TextBlock x:Name="roomView" Margin="5,0,0,4" Text="TextBlock" VerticalAlignment="Bottom" TextAlignment="Right" HorizontalAlignment="Left" Width="49"/>
    </Grid>
</UserControl>
